{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "@typescript-eslint/semi": ["error", "always"],
        "@typescript-eslint/consistent-type-imports": "error",
        "eol-last": 1,
        "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 0 }]
        //"@typescript-eslint/prefer-readonly": "false"
    }
}
